extends ../layout/index

block contenido
    div 
        h1.font-extrabold.text-center.text-4xl Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

    if errores 
        div(class="max-w-md mx-auto my-10")
            each err in errores
                p.bg-red-600.text-white.upeercase.text-xs.text-center.p-2.mb-1.font-bold= err.msg

    .mt-8.mx-auto.max-w-md
        .bg.white.py-8.px-4.shadow 
            form.space-y-5(action="/login" method="POST")
                div 
                    input(type="hidden" name="_csrf" value=csrfToken)
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")

                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")

                //- agregando routing
                div.flex.items-center.justify-between
                    a.text-gray-500.text-xs(href="register") No tienes Cuenta? Crea una
                    a.text-gray-500.text-xs(href="forgotPassword") Olvide mi contrase√±a

                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white cursor-pointer py-3 font-bold" type="submit" value="Iniciar Sesion")
   

