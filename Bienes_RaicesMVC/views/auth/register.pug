extends ../layout/index

block contenido
    div 
        h1.font-extrabold.text-center.text-4xl Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold=pagina

    if errores 
        div(class="max-w-md mx-auto my-10")
            each err in errores
                p.bg-red-600.text-white.upeercase.text-xs.text-center.p-2.mb-1.font-bold= err.msg

                
    .mt-8.mx-auto.max-w-md
        .bg.white.py-8.px-4.shadow 
            form.space-y-5(method="POST" action="/register" noValidate)
            input (type="hidden" name="_csrf" value=csurfToken)
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Tu nombre 
                    input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="name" value= (userInfo)? userInfo.name : "")

                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value= (userInfo)? userInfo.email : "")

                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")

                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir-password") Repite tu Password
                    input#repite-password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu Password" type="password" name="repetir-password")

                div.flex.items-center.justify-between
                    a.text-gray-500.text-xs(href="login") Ya tienes Cuenta? Inicia Sesion
                    a.text-gray-500.text-xs(href="forgotPassword") Olvide mi contrase√±a

                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white cursor-pointer py-3 font-bold" type="submit" value="Crear Cuenta")