extends ../layout/index

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
            h2.text-center.text-2xl.font-extrabold= pagina

            div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
                form.space-y-8
                    div.space-y-8 
                        h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General de la propiedad 
                            p.text-gray-600 Añade informacion sobre la propiedad en venta
                        
                        div 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="title") Titulo de anuncio
                            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo Propiedad ej. Casa en la playa" type="text" name="title" value="")

                        div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                            div(class="md:w-1/2")
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="category") Categoria
                                select#category.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                                    option(value="") -Seleccione-
                                    - var n=1;
                                        while n<10
                                            option(value=n) #{n++} 

                            div(class="md:w-1/2")
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="price") Precio
                                select#price.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                                    option(value="") -Seleccione-
                         
                        
                        div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="rooms") Habitaciones
                                select#rooms.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                                    option(value="") -Seleccione-
                                    - var n=1;
                                        while n<5
                                            option(value=n) #{n++} 

                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="parking") Estacionamiento
                                select#parking.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                                    option(value="") -Seleccione-
                                    - var n=1;
                                        while n<4
                                            option(value=n) #{n++} 

                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="wc") Baños
                                select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400
                                    option(value="") -Seleccione-
                                    - var n=1;
                                        while n<5
                                            option(value=n) #{n++} 
                    

